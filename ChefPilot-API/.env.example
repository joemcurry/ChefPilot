# Example .env for ChefPilot-API
# Copy to .env and fill values for local development. Do NOT commit secrets.

PORT=3000
NODE_ENV=development
# For SQLite-based setups, point to an absolute path or relative path
DB_PATH=./data/chefpilot.sqlite3

# JWT secret - use a long random value in production
JWT_SECRET=replace_this_with_a_secure_random_value

# API base url for clients (use 127.0.0.1 for macOS local dev)
API_BASE_URL=http://127.0.0.1:3000

# Optional: storage paths
UPLOADS_DIR=./uploads
TASK_IMAGE_RETENTION_DAYS=14
DOCUMENT_RETENTION_DAYS=730
